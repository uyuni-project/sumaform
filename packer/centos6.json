{
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/base.sh",
      "scripts/cleanup.sh",
      "scripts/zerodisk.sh"
    ],
    "override": {
      "centos-6": {
        "execute_command": "sh '{{.Path}}'"
      }
    }
  }],
  "builders": [{
      "name": "centos-6",
      "type": "qemu",
      "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.tu-chemnitz.de/pub/linux/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
      "output_directory": "output",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 104858,
      "format": "qcow2",
      "qemuargs": [
        [ "-m", "1024M" ],
        ["-machine", "type=pc,accel=kvm"],
        ["-device", "virtio-net-pci,netdev=user.0"]
      ],
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "linux",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "centos6",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks_cloud_centos.cfg<enter><wait>"
      ]
    }]
}
